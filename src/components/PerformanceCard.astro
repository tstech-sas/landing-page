---
interface Props {
  title: string;
  detail: string;
}

const { title, detail } = Astro.props;
---

<div
  class="flex flex-col items-center justify-center rounded-md border px-4 py-8 hover:border-emerald-400 hover:bg-emerald-400/5 dark:border-gray-600 dark:hover:border-emerald-400"
>
  <div
    class="flex h-32 w-32 items-center justify-center rounded-full border-4 border-emerald-500 bg-emerald-400/5"
  >
    <h2 class="text-4xl font-bold text-emerald-500">100</h2>
  </div>
  <h2 class="mt-4 text-3xl font-semibold text-emerald-500">{title}</h2>
  <p class="mt-8 max-w-xs text-slate-600 dark:text-slate-400">{detail}</p>
</div>
